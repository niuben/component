.dropbtn {
    font-family: $font-family;
    font-size: $font-size-lg;
    background-color: #FFF;
    background-image: url(./arrow.png);
    background-repeat: no-repeat;
    background-position: 90% center;
    padding: $input-padding-vertical-base;
    padding-left: 10px;
    border: 1px solid $border-color-base;
    border-radius: $border-radius-sm; 
    text-align: center;
    cursor: pointer;
}


/* The container <div> - needed to position the dropdown content */

.dropdown {
    display: inline-block;
    position: relative;
    width: 150px;
    background: #FFF;
}


/* Dropdown Content (Hidden by Default) */

.dropdown-content {
    margin-top: 2px;
    position: absolute;
    display: none;
    width: 100%;
    height: $select-content-max-height;
    overflow-y: auto;
    z-index: 1;
    border: $border-width-base $border-style-base $border-color-base;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    background: #FFF;
}


/* Links inside the dropdown */

.dropdown-content a {
    color: black;
    padding: 4px 16px;
    text-decoration: none;
    display: block;
}


/* Change color of dropdown links on hover */

.dropdown-content a:hover{
    color: $text-color;
    background-color: $select-content-item-hover-bg;
}

.dropdown-content a.active {
    color: #FFF;
    background-color: $select-content-item-active-bg;
}

/* Show the dropdown menu on hover */

.dropdown:hover {}

// .dropdown:hover .dropdown-content,
.dropdown .dropdown-content.active{
    display: block;
    border-color: $border-color-active-base;
}


/* Change the background color of the dropdown button when the dropdown content is shown */

.dropdown:hover .dropbtn,
.dropdown.active .dropbtn {
    border-color: #3697fd;
    // background-color: #3e8e41;
}